@keyframes pulse {
    0% {
        transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg);
    }
    50% {
        transform: translate3d(12px, -25px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg);
    }
    100% {
        transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg);
    }
}
.site-header-main-content {
    margin-right: 0;
}
.site-navigation-wrapper {
    width: 40%;
}
.home-section--description {
    text-align: center;
}
.search-section-content {
    padding: 0;
}
.logolist--container .home-section--title {
    margin-top: 0;
}
.animation_with_txt_container {
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 25px;
    padding-right: 25px;
}
.animation_with_txt {
    max-height: 50rem;
    display: flex;
    height: 50vh;
    align-items: center;
    flex-wrap: wrap;
}
.animation__content {
    width: 58.3%;
    flex-basis: 58.3%;
    padding: 2rem;
    padding-right: 3.125rem;
}
.animation__image-wrapper {
    width: 41.7%;
    flex-basis: 41.7%;
    z-index: 1;
    position: relative;
    overflow: hidden;
    display: block;
    height: 100%;
}
.bg_img_animation {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    border-bottom-right-radius: 8px;
    border-bottom-left-radius: 8px;
}
.animation__image {
    z-index: 2;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    will-change: transform;
    transform-style: preserve-3d;
    /* animation: pulse 5s infinite; */
}
.first__button {
    margin-right: 16px;
}
.second__button {
    padding: 0.75rem 1.125rem;
    color: #133c68;
    background-color: #fff;
    border: 1px solid #133c68;
    font-style: normal;
    font-weight: 600;
    display: inline-block;
    text-decoration: none;
    cursor: pointer;
    border-radius: 3px;
    transition: width 125ms cubic-bezier(.4,0,.2,1),height 125ms cubic-bezier(.4,0,.2,1),border-color 125ms cubic-bezier(.4,0,.2,1),background-color 125ms cubic-bezier(.4,0,.2,1),box-shadow 125ms cubic-bezier(.4,0,.2,1);
}
h2.animation__heading p {
    margin: 0;
    font-weight: 700;
    line-height: 1.1;
    font-size: 5.5rem;
}
.image-with-text__image-wrapper {
    display: flex;
}
.image-with-text--desktop-height-natural .image-with-text__image {
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
}
.flex {
    display: flex;
}
.flex .collection--image {
    width: 25%;
    order: 2;
}
.flex .collection--image img {
    width: auto;
    margin-left: auto;
    margin-right: auto;
}
.flex .size_info {
    width: 75%;
    order: 1;
}